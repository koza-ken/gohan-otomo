<div class="min-h-screen bg-gradient-to-br from-orange-50 via-orange-100 to-yellow-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white rounded-3xl shadow-2xl p-8 border border-orange-200">
    <div class="text-center mb-8">
      <h2 class="text-2xl font-bold text-orange-600 mb-6">ログイン</h2>
    </div>

    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true, html: { class: "space-y-6" } do |f| %>
      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-orange-700 mb-2" %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-orange-500">📧</span>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                            class: "w-full pl-10 pr-4 py-3 border border-orange-200 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 bg-white transition duration-200", 
                            placeholder: "example@email.com" %>
        </div>
      </div>

      <div>
        <%= f.label :password, "パスワード", class: "block text-sm font-medium text-orange-700 mb-2" %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-orange-500">🔒</span>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", 
                              class: "w-full pl-10 pr-10 py-3 border border-orange-200 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 bg-white transition duration-200",
                              placeholder: "パスワード" %>
          <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
            <span class="text-orange-400 cursor-pointer">👁</span>
          </div>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "rounded border-orange-300 text-orange-600 focus:ring-orange-500 focus:ring-offset-2 mr-2" %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "text-sm text-orange-700" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "ログイン", class: "w-full bg-orange-500 hover:bg-orange-600 text-white py-4 rounded-lg font-medium transition duration-200 shadow-lg" %>
      </div>
    <% end %>

    <div class="mt-8 text-center">
      <p class="text-orange-600 mb-4">アカウントをお持ちでない方</p>
      <%= link_to "新規登録", new_registration_path(resource_name), 
                  class: "w-full block bg-white text-orange-600 py-3 px-6 rounded-lg border border-orange-300 hover:bg-orange-50 transition duration-200 font-medium" %>
      
      <div class="mt-4">
        <%= link_to "戻る", root_path, class: "text-orange-500 hover:text-orange-700 underline text-sm" %>
      </div>
    </div>
  </div>
</div>
