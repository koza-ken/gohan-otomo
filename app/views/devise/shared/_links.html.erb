<div class="text-center space-y-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログインはこちら", new_session_path(resource_name), 
                class: "block text-amber-600 hover:text-amber-800 underline transition duration-200" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録はこちら", new_registration_path(resource_name), 
                class: "block text-amber-600 hover:text-amber-800 underline transition duration-200" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), 
                class: "block text-sm text-amber-500 hover:text-amber-700 underline transition duration-200" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "確認メールが届かない場合", new_confirmation_path(resource_name), 
                class: "block text-sm text-amber-500 hover:text-amber-700 underline transition duration-200" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "アカウントロック解除", new_unlock_path(resource_name), 
                class: "block text-sm text-amber-500 hover:text-amber-700 underline transition duration-200" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}でサインイン", omniauth_authorize_path(resource_name, provider), 
                    data: { turbo: false },
                    class: "rice-button-secondary mt-4" %>
    <% end %>
  <% end %>
</div>
