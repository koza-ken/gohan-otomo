<div class="container mx-auto px-4 py-8">
  <!-- ヘッダー部分 -->
  <div class="text-center mb-8">
    <% if @user.present? %>
      <h1 class="text-3xl font-bold text-orange-600 mb-4">📝 <%= @user.display_name %>さんの投稿</h1>
      <p class="text-orange-700"><%= @user.display_name %>さんのおすすめお米のお供一覧</p>
      <div class="mt-4">
        <%= link_to "← 全ての投稿を見る", posts_path, 
                    class: "text-orange-500 hover:text-orange-700 underline" %>
      </div>
    <% else %>
      <h1 class="text-3xl font-bold text-orange-600 mb-4">🍚 ご飯のお供掲示板</h1>
      <p class="text-orange-700">みんなのおすすめお米のお供を見つけよう！</p>
    <% end %>
    
    <% if @user.blank? %>
      <% if user_signed_in? %>
        <div class="mt-6">
          <%= link_to "新しいお供を投稿する", new_post_path, 
                      class: "bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-medium transition duration-200 shadow-lg inline-flex items-center" %>
        </div>
      <% else %>
        <div class="mt-6">
          <p class="text-orange-600 mb-2">投稿するにはログインが必要です</p>
          <%= link_to "ログイン", new_user_session_path, 
                      class: "bg-white text-orange-600 px-6 py-3 rounded-lg font-medium border border-orange-300 hover:bg-orange-50 transition duration-200 shadow-lg inline-flex items-center" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- 投稿一覧 -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @posts.each do |post| %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
        <!-- 画像表示（Helperを使用 - thumbnailサイズ） -->
        <div class="aspect-w-16 aspect-h-12">
          <%= post_image_tag(post, size: :thumbnail, class: "w-full h-48 object-cover") %>
        </div>

        <!-- 投稿内容 -->
        <div class="p-6">
          <h3 class="text-lg font-bold text-gray-800 mb-2">
            <%= link_to post.title, post, class: "hover:text-orange-600 transition-colors" %>
          </h3>
          
          <p class="text-gray-600 text-sm mb-4 line-clamp-3">
            <%= truncate(post.description, length: 80) %>
          </p>

          <!-- 統計情報 -->
          <div class="flex items-center justify-between text-sm text-gray-500">
            <div class="flex items-center">
              <span class="text-orange-400">👤</span>
              <% if post.user %>
                <%= link_to post.user.display_name, posts_path(user_id: post.user.id), 
                            class: "ml-1 hover:text-orange-600 hover:underline transition-colors" %>
              <% else %>
                <span class="ml-1">退会済みユーザー</span>
              <% end %>
            </div>
            <div class="flex items-center space-x-3">
              <div class="flex items-center">
                <span class="text-red-400">🕐</span>
                <span class="ml-1"><%= time_ago_in_words(post.created_at) %>前</span>
              </div>
              <div class="flex items-center">
                <span class="text-red-400">💬</span>
                <span class="ml-1"><%= post.comments_count %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 投稿がない場合 -->
  <% if @posts.empty? %>
    <div class="text-center py-12">
      <div class="text-6xl mb-4">🍚</div>
      <% if @user.present? %>
        <h3 class="text-xl font-medium text-orange-600 mb-2"><%= @user.display_name %>さんの投稿はまだありません</h3>
        <p class="text-orange-500 mb-6">まだ投稿されていません</p>
      <% else %>
        <h3 class="text-xl font-medium text-orange-600 mb-2">まだ投稿がありません</h3>
        <p class="text-orange-500 mb-6">最初の投稿をしてみませんか？</p>
        <% if user_signed_in? %>
          <%= link_to "投稿する", new_post_path, 
                      class: "bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-medium transition duration-200 shadow-lg" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>