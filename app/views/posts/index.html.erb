<div class="container mx-auto px-4 py-8">
  <!-- ヘッダー部分 -->
  <div class="text-center mb-8">
    <% if @user.present? %>
      <h1 class="text-3xl font-bold text-orange-600 mb-4">📝 <%= @user.display_name %>さんの投稿</h1>
      <p class="text-orange-700"><%= @user.display_name %>さんのおすすめお米のお供一覧</p>
      <div class="mt-4">
        <%= link_to "← 全ての投稿を見る", posts_path,
                    class: "text-orange-500 hover:text-orange-700 underline" %>
      </div>
    <% else %>
      <h1 class="text-3xl font-bold text-orange-600 mb-4">🍚 ご飯のお供掲示板</h1>
      <p class="text-orange-700">みんなのおすすめお米のお供を見つけよう！</p>
    <% end %>

    <% if @user.blank? %>
      <% if user_signed_in? %>
        <div class="mt-6">
          <%= link_to "新しいお供を投稿する", new_post_path,
                      class: "bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-medium transition duration-200 shadow-lg inline-flex items-center" %>
        </div>
      <% else %>
        <div class="mt-6">
          <p class="text-orange-600 mb-2">投稿するにはログインが必要です</p>
          <%= link_to "ログイン", new_user_session_path,
                      class: "bg-white text-orange-600 px-6 py-3 rounded-lg font-medium border border-orange-300 hover:bg-orange-50 transition duration-200 shadow-lg inline-flex items-center" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- 検索・フィルター部分 -->
  <div class="bg-white rounded-lg shadow-md mb-8">
    <!-- 検索フォーム本体 -->
    <div class="p-2">
      <%= form_with url: posts_path, method: :get, local: true, class: "flex space-x-2" do |form| %>
        <%= form.text_field :search,
                            value: params[:search],
                            placeholder: "商品名・おすすめポイントで検索...",
                            class: "flex-1 px-3 py-2 text-sm border border-orange-200 rounded-lg focus:ring-1 focus:ring-orange-400 focus:border-orange-400 transition duration-200" %>
        <%= form.submit "検索", class: "px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white text-sm rounded-lg font-medium transition duration-200 shadow-sm" %>
        <%= form.hidden_field :user_id, value: params[:user_id] if params[:user_id].present? %>
      <% end %>
    </div>
  </div>

  <!-- 検索結果情報 -->
  <% if params[:search].present? %>
    <div class="bg-orange-50 rounded-lg p-4 mb-6">
      <div class="flex flex-wrap items-center justify-between">
        <div class="text-orange-700">
          <span class="font-medium">「<%= params[:search] %>」</span>の検索結果:
          <span class="font-bold"><%= @posts.count %>件</span>の投稿
        </div>
        <div>
          <%= link_to "× 検索をクリア", posts_path(user_id: params[:user_id]),
                      class: "text-orange-500 hover:text-orange-700 text-sm font-medium transition duration-200" %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- 投稿一覧 -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @posts.each do |post| %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
        <!-- 画像・タイトル・説明エリア（リンク化） -->
        <%= link_to post, class: "block hover:bg-gray-50 transition-colors duration-200" do %>
          <!-- 画像表示（Helperを使用 - thumbnailサイズ） -->
          <div class="aspect-w-16 aspect-h-12">
            <%= post_image_tag(post, size: :thumbnail, class: "w-full h-48 object-cover") %>
          </div>

          <!-- 投稿内容 -->
          <div class="p-6 pb-4">
            <h3 class="text-lg font-bold text-gray-800 mb-2 hover:text-orange-600 transition-colors">
              <%= post.title %>
            </h3>

            <p class="text-gray-600 text-sm mb-0 line-clamp-3">
              <%= truncate(post.description, length: 80) %>
            </p>
          </div>
        <% end %>

        <!-- 統計情報エリア（リンク対象外） -->
        <div class="px-6 pb-6">
          <div class="flex items-center justify-between text-sm text-gray-500">
            <div class="flex items-center">
              <span class="text-orange-400">👤</span>
              <% if post.user %>
                <%= link_to post.user.display_name, posts_path(user_id: post.user.id),
                            class: "ml-1 hover:text-orange-600 hover:underline transition-colors" %>
              <% else %>
                <span class="ml-1">退会済みユーザー</span>
              <% end %>
            </div>
            <div class="flex items-center space-x-3">
              <div class="flex items-center">
                <span class="text-red-400">🕐</span>
                <span class="ml-1"><%= time_ago_in_words(post.created_at) %>前</span>
              </div>
              <div class="flex items-center">
                <span class="text-red-400">💬</span>
                <span class="ml-1"><%= post.comments_count %></span>
              </div>
              <!-- いいねボタン -->
              <%= render 'likes/button', post: post %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 投稿がない場合 -->
  <% if @posts.empty? %>
    <div class="text-center py-12">
      <div class="text-6xl mb-4">🍚</div>
      <% if @user.present? %>
        <h3 class="text-xl font-medium text-orange-600 mb-2"><%= @user.display_name %>さんの投稿はまだありません</h3>
        <p class="text-orange-500 mb-6">まだ投稿されていません</p>
      <% else %>
        <h3 class="text-xl font-medium text-orange-600 mb-2">まだ投稿がありません</h3>
        <p class="text-orange-500 mb-6">最初の投稿をしてみませんか？</p>
        <% if user_signed_in? %>
          <%= link_to "投稿する", new_post_path,
                      class: "bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-medium transition duration-200 shadow-lg" %>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <!-- ページネーション -->
  <% if @posts.respond_to?(:current_page) && @posts.total_pages > 1 %>
    <div class="mt-12">
      <div class="flex justify-center items-center space-x-1">
        <%= paginate @posts,
            params: { search: params[:search], user_id: params[:user_id] }.compact,
            class: "flex items-center space-x-1" %>
      </div>

      <!-- ページ情報表示 -->
      <div class="text-center mt-4 text-sm text-orange-600">
        <%= page_entries_info @posts, entry_name: '投稿' %>
      </div>
    </div>
  <% end %>
</div>
