<div class="container mx-auto px-4 py-8">
  <!-- ヘッダー部分 -->
  <div class="text-center mb-8">
    <% if @user.present? %>
      <h1 class="text-3xl font-bold text-orange-600 mb-4"><%= @user.display_name %>さんのお供だち</h1>

      <div class="mt-4">
        <%= link_to "プロフィール", user_profile_path(@user),
                    class: "bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-medium transition duration-200 shadow-lg inline-flex items-center mb-4" %>
      </div>
    <% else %>
      <h1 class="text-3xl font-bold text-orange-600 mb-4">みんなのお供だち</h1>
      <%# <p class="text-orange-700">みんなのおすすめお米のお供を見つけよう！</p> %>
    <% end %>

    <% # 投稿ボタンは右下のフローティングアクションボタンに移動 %>
  </div>

  <!-- 検索・フィルター部分 -->
  <div class="bg-white rounded-lg shadow-md mb-8">
    <!-- 検索フォーム本体 -->
    <div class="p-2">
      <%= form_with url: posts_path, method: :get, local: true, class: "flex space-x-2" do |form| %>
        <%= form.text_field :search,
                            value: params[:search],
                            placeholder: "商品名・おすすめポイントで検索...",
                            class: "flex-1 px-3 py-2 text-sm border border-orange-200 rounded-lg focus:ring-1 focus:ring-orange-400 focus:border-orange-400 transition duration-200" %>
        <%= form.submit "検索", class: "px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white text-sm rounded-lg font-medium transition duration-200 shadow-sm" %>
        <%= form.hidden_field :user_id, value: params[:user_id] if params[:user_id].present? %>
      <% end %>
    </div>
  </div>

  <!-- 検索結果情報 -->
  <% if params[:search].present? %>
    <div class="bg-orange-50 rounded-lg p-4 mb-6">
      <div class="text-orange-700">
        <span class="font-medium">「<%= params[:search] %>」</span>の検索結果:
        <span class="font-bold"><%= @posts.count %>件</span>の投稿
        <%= link_to "× 検索をクリア", posts_path(user_id: params[:user_id]),
                    class: "ml-4 text-orange-500 hover:text-orange-700 text-sm font-medium transition duration-200" %>
      </div>
    </div>
  <% end %>

  <!-- 投稿一覧 -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @posts.each do |post| %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col h-full">
        <!-- 画像・タイトル・説明エリア（リンク化） -->
        <%= link_to post, class: "block hover:bg-gray-50 transition-colors duration-200 flex-1 flex flex-col" do %>
          <!-- 画像表示（Helperを使用 - thumbnailサイズ） -->
          <div class="aspect-w-16 aspect-h-12">
            <%= picture_post_image_tag(post, size: :thumbnail, class: "w-full h-48 object-cover") %>
          </div>

          <!-- 投稿内容 -->
          <div class="p-6 pb-4 flex-1 flex flex-col">
            <h3 class="text-lg font-bold text-gray-800 mb-2 hover:text-orange-600 transition-colors">
              <span class="sm:hidden">
                <%= truncate(post.title, length: 20) %>
              </span>
              <span class="hidden sm:inline">
                <%= truncate(post.title, length: 30) %>
              </span>
            </h3>

            <p class="text-gray-600 text-sm mb-0 line-clamp-3 flex-1">
              <span class="sm:hidden">
                <%= truncate(post.description, length: 48) %>
              </span>
              <span class="hidden sm:inline">
                <%= truncate(post.description, length: 78) %>
              </span>
            </p>
          </div>
        <% end %>

        <!-- 統計情報エリア（リンク対象外・下端固定） -->
        <div class="px-6 pb-6 mt-auto">
          <div class="flex items-center justify-between text-sm text-gray-500">
            <div class="flex items-center">
              <%= icon_tag :user, class: "w-4 h-4 text-orange-400", alt: "ユーザー" %>
              <% if post.user %>
                <%= link_to truncate(post.user.display_name, length: 12), posts_path(user_id: post.user.id),
                            class: "ml-1 hover:text-orange-600 hover:underline transition-colors" %>
              <% else %>
                <span class="ml-1">退会済みユーザー</span>
              <% end %>
            </div>
            <div class="flex items-center space-x-3">
              <div class="flex items-center">
                <%= icon_tag :clock, class: "text-red-400 w-4 h-4" %>
                <span class="ml-1"><%= time_ago_in_words(post.created_at) %>前</span>
              </div>
              <div class="flex items-center">
                <%= icon_tag :hukidashi, class: "text-red-400 w-4 h-4" %>
                <span class="ml-1"><%= post.comments_count %></span>
              </div>
              <!-- いいねボタン -->
              <%= render 'likes/button', post: post %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 投稿がない場合 -->
  <% if @posts.empty? %>
    <div class="text-center py-12">
      <% if @user.present? %>
        <h3 class="text-xl font-medium text-orange-600 mb-2"><%= @user.display_name %>さんの投稿はまだありません</h3>
      <% else %>
        <h3 class="text-xl font-medium text-orange-600 mb-2">まだ投稿がありません</h3>
        <p class="text-orange-500 mb-6">最初の投稿をしてみませんか？</p>
        <% if user_signed_in? %>
          <%= link_to "投稿する", new_post_path,
                      class: "bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-medium transition duration-200 shadow-lg" %>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <!-- ページネーション -->
  <% if @posts.respond_to?(:current_page) && @posts.total_pages > 1 %>
    <div class="mt-12">
      <div class="flex justify-center items-center space-x-1">
        <%= paginate @posts,
            params: { search: params[:search], user_id: params[:user_id] }.compact,
            class: "flex items-center space-x-1" %>
      </div>

      <!-- ページ情報表示 -->
      <div class="text-center mt-4 text-sm text-orange-600">
        <%= page_entries_info @posts, entry_name: '投稿' %>
      </div>
    </div>
  <% end %>
</div>

<!-- フローティングアクションボタン（投稿用） -->
<% if user_signed_in? %>
  <div class="fixed bottom-10 right-10 z-50" data-controller="floating-menu">
    <!-- ＋ボタン -->
    <button data-action="click->floating-menu#toggle" data-floating-menu-target="button"
            class="bg-orange-500 hover:bg-orange-600 text-white w-14 h-14 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 flex items-center justify-center text-3xl font-bold">
      <span data-floating-menu-target="icon">+</span>
    </button>

    <!-- ドロップダウンメニュー -->
    <div data-floating-menu-target="menu" class="absolute bottom-16 right-0 hidden">
      <div class="bg-white rounded-lg shadow-xl border border-gray-200 py-2 min-w-40">
        <%= link_to new_post_path, class: "flex items-center px-4 py-3 text-gray-700 hover:bg-orange-50 hover:text-orange-600 transition-colors duration-200" do %>
          <span class="font-medium">お供だちを紹介</span>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <!-- ログインしていない場合のフローティングボタン -->
  <div class="fixed bottom-6 right-6 z-50" data-controller="floating-menu">
    <button data-action="click->floating-menu#toggle" data-floating-menu-target="button"
            class="bg-gray-400 hover:bg-gray-500 text-white w-14 h-14 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 flex items-center justify-center text-2xl font-bold">
      <span data-floating-menu-target="icon">+</span>
    </button>

    <div data-floating-menu-target="menu" class="absolute bottom-16 right-0 hidden">
      <div class="bg-white rounded-lg shadow-xl border border-gray-200 py-2 min-w-48">
        <%= link_to new_user_session_path, class: "flex items-center px-4 py-3 text-gray-700 hover:bg-orange-50 hover:text-orange-600 transition-colors duration-200" do %>
          <%= icon_tag :lock, class: "w-6 h-6 mr-3", alt: "ロック" %>
          <span class="font-medium">ログインして投稿</span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
