<% content_for :title, @post.title %>
<% content_for :og_title, "「#{@post.title}」- お供だち" %>
<% content_for :og_type, "article" %>
<% content_for :og_url, request.original_url %>
<% content_for :og_description, truncate(@post.description, length: 100) %>
<% if @post.has_image? %>
  <% content_for :og_image, url_for(@post.display_image(:medium)) %>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-orange-50 via-orange-100 to-yellow-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- 戻るリンク -->
    <div class="mb-6">
      <%= link_to "← 投稿一覧に戻る", posts_path,
                  class: "text-orange-500 hover:text-orange-700 font-medium inline-flex items-center" %>
    </div>

    <!-- 投稿詳細 -->
    <div class="bg-white rounded-3xl shadow-2xl border border-orange-200 overflow-hidden mb-8 mx-auto w-full" style="max-width: 800px;">
      <div class="flex flex-col sm:flex-row">
        <!-- 画像表示（スマホ: 100%幅、タブレット以上: 50%幅） -->
        <% if @post.has_image? %>
          <div class="w-full sm:w-1/2 flex-shrink-0">
            <div class="aspect-square w-full bg-gray-200 overflow-hidden">
              <%= picture_post_image_tag(@post, size: :medium, class: "w-full h-full object-cover") %>
            </div>
          </div>
        <% end %>

        <!-- 商品情報（スマホ: 100%幅、タブレット以上: 50%幅） -->
        <div class="w-full sm:w-1/2 flex-shrink-0 p-4 lg:p-8">
        <!-- 投稿タイトルと編集メニュー -->
        <div class="flex items-start justify-between mb-4">
          <h1 class="text-3xl font-bold text-orange-600 flex-1 mr-4"><%= truncate(@post.title, length: 50) %></h1>

          <!-- 投稿者のメニューボタン（投稿者のみ） -->
          <% if user_signed_in? && current_user == @post.user %>
            <div class="relative inline-block" data-controller="dropdown">
              <button class="text-gray-400 hover:text-gray-600 transition-colors p-2"
                      data-action="click->dropdown#toggle">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                </svg>
              </button>
              <div class="absolute right-0 mt-2 w-24 bg-white rounded-lg shadow-xl border border-gray-100 opacity-0 invisible transition-all duration-300 transform translate-y-2 z-50"
                   data-dropdown-target="menu">
                <div class="py-1">
                  <%= link_to edit_post_path(@post),
                      class: "flex items-center px-4 py-2 text-gray-700 hover:bg-orange-50 hover:text-orange-600 transition duration-200" do %>
                    <%= icon_tag :pen, class: "mr-2 w-4 h-4" %>編集
                  <% end %>
                  <%= link_to post_path(@post),
                      data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                      class: "flex items-center px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition duration-200" do %>
                    <%= icon_tag :gomibako, class: "mr-2 w-4 h-4" %>削除
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- 投稿者情報と日時、ボタン類 -->
        <div class="mb-6 pb-4 border-b border-orange-100">
          <!-- 投稿者情報 -->
          <div class="flex items-center text-orange-500 mb-2">
            <%= icon_tag :user, class: "w-5 h-5", alt: "ユーザー" %>
            <% if @post.user %>
              <%= link_to truncate(@post.user.display_name, length: 18), posts_path(user_id: @post.user.id),
                          class: "ml-1 hover:text-orange-700 hover:underline transition-colors font-medium" %>
            <% else %>
              <span class="ml-1">退会済みユーザー</span>
            <% end %>
          </div>

          <!-- 投稿日時といいね・Xボタン（横並び） -->
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-500">
              <%= @post.created_at.strftime("%Y年%m月%d日") %>
            </div>

            <div class="flex items-center space-x-3">
              <!-- いいねボタン -->
              <%= render 'likes/button', post: @post %>

              <!-- X投稿ボタン -->
              <%= x_share_button(@post) %>
            </div>
          </div>
        </div>

        <!-- おすすめポイント -->
        <div class="mb-6">
          <h3 class="text-lg font-semibold text-orange-600 mb-3 flex items-center">
            おすすめポイント
          </h3>
          <p class="text-gray-700 leading-relaxed"><%= simple_format(@post.description) %></p>
        </div>

        <!-- 通販リンク -->
        <% if @post.safe_link.present? %>
          <div class="mb-6 p-4 bg-orange-50 rounded-lg border border-orange-200">
            <h3 class="text-lg font-semibold text-orange-600 mb-2 flex items-center">
              <%= icon_tag :clip, class: "inline-block w-5 h-5 mr-2" %>購入リンク
            </h3>
            <%# safe_linkメソッドでjavascript:やdata:スキームなどの危険なURLは既にフィルタリング済み %>
            <%= link_to "この商品を見る", @post.safe_link,
                        class: "text-orange-500 hover:text-orange-700 underline font-medium",
                        target: "_blank", rel: "noopener noreferrer" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>

    <!-- コメント一覧 -->
    <div class="bg-white rounded-3xl shadow-lg border border-orange-200 p-6 mx-auto" style="max-width: 800px;">
      <h3 class="text-xl font-semibold text-orange-600 mb-4 flex items-center">
        <%= icon_tag :hukidashi, class: "inline-block w-5 h-5 mr-2" %>コメント（<%= @comments.count %>件）
      </h3>

      <!-- コメント投稿フォーム（ログイン時） -->
      <% if user_signed_in? %>
        <div class="mb-4 p-4 bg-orange-50 rounded-2xl border border-orange-200">
          <h4 class="text-lg font-medium text-orange-600 mb-2">コメントを投稿</h4>
          <%= form_with model: [@post, @comment], local: true, html: { class: "space-y-4" } do |f| %>
            <div>
              <%= f.text_area :content, rows: 3,
                              class: "w-full px-4 py-3 border border-orange-200 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 bg-white transition duration-200",
                              placeholder: "感想やコメントを入力してください..." %>
            </div>
            <div class="text-right">
              <%= f.submit "コメント投稿",
                          class: "bg-orange-500 hover:bg-orange-600 text-white px-6 py-2 rounded-lg font-medium transition duration-200 shadow-lg" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="mb-8 p-6 bg-gray-50 rounded-2xl border border-gray-200 text-center">
          <p class="text-gray-600 mb-4">コメントを投稿するにはログインが必要です</p>
          <%= link_to "ログイン", new_user_session_path,
                      class: "bg-orange-500 hover:bg-orange-600 text-white px-6 py-2 rounded-lg font-medium transition duration-200" %>
        </div>
      <% end %>

      <!-- コメント表示 -->
      <div class="space-y-6">
        <% @comments.each do |comment| %>
          <div class="border-b border-orange-100 pb-6 last:border-b-0 last:pb-0">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center">
                  <%= icon_tag :user, class: "w-6 h-6 text-orange-500", alt: "ユーザー" %>
                </div>
              </div>
              <div class="flex-1">
                <div class="flex items-center space-x-2 mb-2">
                  <span class="font-medium text-orange-600">
                    <%= comment.user&.display_name || "退会済みユーザー" %>
                  </span>
                  <span class="text-sm text-gray-500">
                    <%= comment.created_at.strftime("%Y年%m月%d日 %H:%M") %>
                  </span>
                </div>
                <p class="text-gray-700 leading-relaxed"><%= simple_format(comment.content) %></p>
              </div>
            </div>
          </div>
        <% end %>

        <!-- コメントがない場合 -->
        <% if @comments.empty? %>
          <div class="text-center py-8">
            <div class="mb-3">
              <%= icon_tag :hukidashi, class: "w-12 h-12 text-gray-400 mx-auto" %>
            </div>
            <p class="text-gray-500">まだコメントがありません</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
