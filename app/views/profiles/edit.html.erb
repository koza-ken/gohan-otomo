<div class="min-h-screen bg-amber-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto bg-white rounded-3xl shadow-2xl p-8 border border-orange-200">

    <!-- ヘッダー部分 -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-orange-600 mb-2">プロフィール編集</h1>
      <div class="h-1 w-20 bg-gradient-to-r from-orange-400 to-yellow-400 mx-auto rounded-full"></div>
    </div>

    <!-- エラーメッセージ表示 -->
    <% if @user.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-lg">
        <div class="flex">
          <div class="flex-shrink-0">
            <%= icon_tag :alert, class: "w-6 h-6 text-red-400", alt: "警告" %>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">入力内容を確認してください</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc list-inside">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- フォーム -->
    <%= form_with model: @user, url: user_profile_path(@user), method: :patch, local: true, html: { class: "space-y-6" } do |f| %>

      <!-- メールアドレス（表示のみ） -->
      <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
        <label class="block text-sm font-medium text-gray-700 mb-2">メールアドレス</label>
        <p class="text-gray-600p-3"><%= @user.email %></p>
        <p class="text-xs text-gray-500 mt-1">メールアドレスは設定画面から変更できます</p>
      </div>

      <!-- 表示名 -->
      <div>
        <%= f.label :display_name, "表示名", class: "block text-sm font-medium text-orange-700 mb-2" %>
        <%= f.text_field :display_name,
            class: "w-full px-4 py-3 border border-orange-200 bg-orange-50/50 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition duration-200",
            placeholder: "あなたの表示名を入力してください",
            maxlength: 20 %>
        <p class="text-xs text-gray-500 mt-1">20文字以内で入力してください</p>
      </div>

      <!-- 好きな食べ物 -->
      <div>
        <%= f.label :favorite_foods, "好きな食べ物", class: "block text-sm font-medium text-green-700 mb-2" %>
        <%= f.text_area :favorite_foods,
            class: "w-full px-4 py-3 border border-green-200 bg-green-50/50 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition duration-200 min-h-[120px]",
            placeholder: "例：白米、納豆、海苔の佃煮、明太子\n好きな食べ物を自由に書いてください",
            maxlength: 200 %>
        <p class="text-xs text-gray-500 mt-1">200文字以内で入力してください</p>
      </div>

      <!-- 嫌いな食べ物 -->
      <div>
        <%= f.label :disliked_foods, "嫌いな食べ物", class: "block text-sm font-medium text-red-700 mb-2" %>
        <%= f.text_area :disliked_foods,
            class: "w-full px-4 py-3 border border-red-200 bg-red-50/50 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200 min-h-[120px]",
            placeholder: "例：辛いもの、苦いもの\n嫌いな食べ物があれば書いてください",
            maxlength: 200 %>
        <p class="text-xs text-gray-500 mt-1">200文字以内で入力してください（空白でもOK）</p>
      </div>

      <!-- 公開設定 -->
      <!-- <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
        <div class="flex items-start">
          <div class="flex items-center h-5">
            <%= f.check_box :profile_public,
                class: "w-5 h-5 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2" %>
          </div>
          <div class="ml-3">
            <%= f.label :profile_public, "プロフィールを公開する", class: "text-sm font-medium text-blue-700" %>
            <p class="text-xs text-blue-600 mt-1">
              チェックを外すと、あなた以外はプロフィールを見ることができません
            </p>
          </div>
        </div>
      </div>
      -->

      <!-- ボタン類 -->
      <div class="flex flex-col sm:flex-row gap-4 pt-6">
        <!-- 更新ボタン -->
        <%= f.submit "プロフィールを更新",
            class: "flex-1 bg-orange-400 text-white py-3 px-6 rounded-full font-medium hover:from-orange-500 hover:to-orange-600 transform hover:scale-105 transition duration-300 shadow-lg" %>

        <!-- キャンセルボタン -->
        <%= link_to "キャンセル", user_profile_path(@user),
            class: "flex-1 text-center bg-gray-100 text-gray-700 py-3 px-6 rounded-full font-medium hover:bg-gray-200 transition duration-200" %>
      </div>
    <% end %>

  </div>
</div>
