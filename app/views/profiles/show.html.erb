<div class="min-h-screen bg-gradient-to-br from-orange-50 via-orange-100 to-yellow-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto bg-white rounded-3xl shadow-2xl p-8 border border-orange-200">

    <!-- ヘッダー部分 -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-orange-600 mb-2"><%= @user.display_name %>さんのプロフィール</h1>
      <div class="h-1 w-20 bg-gradient-to-r from-orange-400 to-yellow-400 mx-auto rounded-full"></div>
    </div>

    <!-- プロフィール情報 -->
    <div class="space-y-6">

      <!-- 基本情報（本人のみメールアドレス表示） -->
      <% if @user == current_user %>
        <div class="bg-orange-50 rounded-lg p-4 border-l-4 border-orange-400">
          <h3 class="text-lg font-semibold text-orange-700 mb-2">基本情報</h3>
          <p class="text-gray-700">
            <span class="font-medium">メールアドレス:</span> <%= @user.email %>
          </p>
          <span class="text-xs text-gray-500">他のユーザーには公開されません</span>
        </div>
      <% end %>

      <!-- 好きな食べ物 -->
      <div class="bg-green-50 rounded-lg p-4 border-l-4 border-green-400">
        <h3 class="text-lg font-semibold text-green-700 mb-3">好きな食べ物</h3>
        <% if @user.favorite_foods.present? %>
          <p class="text-gray-700 leading-relaxed"><%= simple_format(@user.favorite_foods) %></p>
        <% else %>
          <p class="text-gray-500 italic">まだ登録されていません</p>
        <% end %>
      </div>

      <!-- 嫌いな食べ物 -->
      <div class="bg-red-50 rounded-lg p-4 border-l-4 border-red-400">
        <h3 class="text-lg font-semibold text-red-700 mb-3">嫌いな食べ物</h3>
        <% if @user.disliked_foods.present? %>
          <p class="text-gray-700 leading-relaxed"><%= simple_format(@user.disliked_foods) %></p>
        <% else %>
          <p class="text-gray-500 italic">まだ登録されていません</p>
        <% end %>
      </div>

    </div>

    <!-- 編集ボタン（本人のみ） -->
    <% if @user == current_user %>
      <div class="mt-8 text-center">
        <%= link_to "プロフィールを編集", edit_user_profile_path(@user),
            class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-orange-400 to-orange-500 text-white font-medium rounded-full hover:from-orange-500 hover:to-orange-600 transform hover:scale-105 transition duration-300 shadow-lg" %>
      </div>
    <% end %>

    <!-- 戻るボタン -->
    <div class="mt-6 text-center">
      <%= link_to "トップページに戻る", root_path,
          class: "text-orange-600 hover:text-orange-700 font-medium transition duration-200" %>
    </div>

  </div>
</div>
