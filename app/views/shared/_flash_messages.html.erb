<% flash.each do |type, message| %>
  <% case type.to_sym %>
  <% when :notice %>
    <div class="border-l-4 border-green-400 p-4 mx-4 mt-4 rounded-r-lg">
      <div class="flex">
        <div class="flex-shrink-0">
          <%# <span class="text-green-400 text-xl">âœ…</span> %>
        </div>
        <div class="ml-3">
          <p class="text-green-800"><%= message %></p>
        </div>
      </div>
    </div>
  <% when :alert %>
    <div class="border-l-4 border-red-400 p-4 mx-4 mt-4 rounded-r-lg">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= icon_tag :alert, class: "text-red-400 text-xl w-6 h-6" %>
        </div>
        <div class="ml-3">
          <p class="text-red-800"><%= message %></p>
        </div>
      </div>
    </div>
  <% else %>
    <div class="border-l-4 border-blue-400 p-4 mx-4 mt-4 rounded-r-lg">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= icon_tag :info, class: "text-blue-400 text-xl w-6 h-6" %>
        </div>
        <div class="ml-3">
          <p class="text-blue-800"><%= message %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
