<% if user_signed_in? %>
  <div class="flex items-center space-x-4">
    <span class="text-orange-100 text-sm">
      こんにちは、<%= current_user.display_name %>さん 🌾
    </span>
    <%= link_to "プロフィール", edit_user_registration_path,
                class: "text-white hover:text-orange-100 transition duration-300" %>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete,
                class: "bg-white text-orange-600 px-4 py-2 rounded-full hover:bg-orange-50 transition duration-300 text-sm font-medium shadow-sm" %>
  </div>
<% else %>
  <%= link_to "ログイン", new_user_session_path,
              class: "bg-white text-orange-600 px-6 py-2 rounded-full hover:bg-orange-50 transition duration-300 text-sm font-medium shadow-sm border border-orange-200" %>
<% end %>
