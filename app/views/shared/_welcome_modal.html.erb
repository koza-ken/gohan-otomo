<!-- 初回アクセス時のアプリ説明モーダル -->
<div data-controller="welcome-modal" data-welcome-modal-target="modal"
     data-action="click->welcome-modal#closeOnBackdrop"
     class="fixed inset-0 z-50 flex items-center justify-center bg-black/40 bg-opacity-50 hidden opacity-0 transition-opacity duration-300">

  <div class="bg-white rounded-3xl shadow-2xl max-w-lg mx-4 overflow-hidden border-4 border-orange-200">

    <!-- ヘッダー部分 -->
    <div class="bg-orange-400 px-6 py-4 relative">
      <div class="flex items-center justify-center">
        <h2 class="font-hannari text-2xl font-bold text-white">ごはん、おいしいですよね</h2>
      </div>

      <!-- 右上の×ボタン -->
      <button data-action="click->welcome-modal#closeModal"
              class="absolute top-4 right-4 text-white hover:text-orange-100 transition-colors duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- コンテンツ部分 -->
    <div class="p-6">

      <!-- アプリ説明 -->
      <div class="text-center mb-6">
        <p class="text-gray-700 leading-relaxed mb-4">
          <strong class="text-orange-600">お供だち</strong>は、あなたの大切な「ごはんのお供」を共有できるアプリです。
        </p>

        <p class="text-gray-600 leading-relaxed mb-4">
          あなたにも「お供だち」がきっといるはず！
        </p>

        <div class="bg-orange-50 rounded-xl p-4 mt-6 border border-orange-200">
          <p class="text-orange-700 font-medium">
            まずはあなたの「お供だち」を紹介してみませんか？
          </p>
        </div>
      </div>

    </div>

    <!-- フッター部分（アクションボタン） -->
    <div class="bg-gray-50 px-8 py-4 flex flex-col sm:flex-row gap-3">

      <!-- 投稿誘導ボタン（メイン） -->
      <%= link_to user_signed_in? ? new_post_path : new_user_session_path,
          class: "inline-flex items-center justify-center px-6 py-3 bg-orange-400 hover:bg-orange-600 text-white font-bold rounded-xl transition-colors duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" do %>
        <% if user_signed_in? %>
          お供だちを紹介する
        <% else %>
          ログインして紹介する
        <% end %>
      <% end %>

      <!-- 閉じるボタン（サブ） -->
      <button data-action="click->welcome-modal#closeModal"
              class="inline-flex items-center justify-center px-6 py-2 text-gray-600 hover:text-gray-800 font-medium rounded-xl border border-gray-300 hover:border-gray-400 transition-colors duration-200">
        みんなのお供だちをみる
      </button>

    </div>

  </div>
</div>
