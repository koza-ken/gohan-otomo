<!-- コメント投稿フォーム -->
<div id="comment_form" class="bg-orange-50 rounded-xl p-4 mb-6 border border-orange-200">
  <%= form_with(model: [post, comment], local: false, class: "space-y-3", data: { turbo_frame: nil }) do |form| %>

    <div class="flex items-center space-x-3">
      <div class="w-7 h-7 bg-orange-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
        <%= current_user.display_name.first %>
      </div>
      <span class="text-sm font-medium text-orange-800">
        <%= current_user.display_name %>
      </span>
    </div>

    <div class="space-y-2">
      <%= form.text_area :content,
          rows: 3,
          class: "w-full px-3 py-2 border border-orange-200 rounded-lg focus:ring-2 focus:ring-orange-400 focus:border-transparent resize-none transition duration-200",
          maxlength: 300 %>

      <% if comment.errors.any? %>
        <div class="text-sm text-red-600">
          <% comment.errors.full_messages.each do |message| %>
            <div>• <%= message %></div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="flex items-center justify-between">
      <div class="text-xs text-gray-500">
        <span id="comment_counter">0</span> / 300 文字
      </div>

      <%= form.submit "コメント投稿",
          class: "bg-orange-400 hover:bg-orange-500 text-white px-4 py-2 rounded-lg text-sm font-medium transition duration-200 cursor-pointer",
          data: { disable_with: "投稿中..." } %>
    </div>
  <% end %>
</div>

<script>
  // 文字数カウンター
  document.addEventListener('DOMContentLoaded', function() {
    const textArea = document.querySelector('textarea[name="comment[content]"]');
    const counter = document.getElementById('comment_counter');

    if (textArea && counter) {
      function updateCounter() {
        const length = textArea.value.length;
        counter.textContent = length;

        // 文字数に応じて色を変更
        if (length > 280) {
          counter.className = 'text-red-600 font-medium';
        } else if (length > 250) {
          counter.className = 'text-orange-600';
        } else {
          counter.className = 'text-gray-500';
        }
      }

      textArea.addEventListener('input', updateCounter);
      updateCounter(); // 初期値設定
    }
  });
</script>
