<!-- 個別コメント表示 -->
<div id="comment_<%= comment.id %>" class="bg-white rounded-lg p-4 border border-gray-200 hover:border-orange-200 transition duration-200">
  <div class="flex justify-between items-start mb-3">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-orange-500 rounded-full flex items-center justify-center text-white font-bold text-sm shadow-sm">
        <%= comment.user.display_name.first %>
      </div>
      <div>
        <div class="font-medium text-gray-900 text-sm">
          <%= comment.user.display_name %>
        </div>
        <div class="text-xs text-gray-500">
          <%= icon_tag :clock, class: "inline-block w-4 h-4 mr-2" %>
          <%= comment.time_ago_in_words_japanese %>
        </div>
      </div>
    </div>

    <% if comment.deletable_by?(current_user) %>
      <%= link_to post_comment_path(comment.post, comment),
          method: :delete,
          data: {
            confirm: "このコメントを削除しますか？",
            turbo_method: :delete
          },
          class: "text-gray-400 hover:text-red-500 transition duration-200 text-sm",
          title: "コメントを削除" %>
      <%= icon_tag :gomibako, class: "inline-block w-7 h-7 mr-2" %>
    <% end %>
  </div>

  <div class="text-gray-800 text-sm leading-relaxed">
    <%= comment.formatted_content %>
  </div>
</div>
